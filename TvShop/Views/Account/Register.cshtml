@model TvShop.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Регистрация";
}

<div class="min-h-screen bg-gradient-to-br from-green-50 to-blue-100 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md mx-auto">
        <div class="bg-white rounded-2xl shadow-xl overflow-hidden">
            <div class="bg-gradient-to-r from-green-500 to-blue-500 py-6 px-8">
                <div class="flex items-center justify-center space-x-3">
                    <div class="w-12 h-12 bg-white rounded-lg flex items-center justify-center shadow-lg">
                        <span class="text-green-600 font-bold text-xl">TV</span>
                    </div>
                    <h1 class="text-2xl font-bold text-white">TVShop</h1>
                </div>
                <p class="text-green-100 text-center mt-3 text-sm">Создайте новый аккаунт</p>
            </div>

            <div class="py-8 px-8">
                <form asp-action="Register" method="post" class="space-y-6">
                    <div class="space-y-2">
                        <label for="Email" class="block text-sm font-medium text-gray-700">
                            <i class="fas fa-envelope mr-2 text-green-500"></i>Email адрес
                        </label>
                        <input asp-for="Email" type="email" 
                               class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-all duration-200 placeholder-gray-400"
                               placeholder="your@email.com" />
                        <span asp-validation-for="Email" class="text-red-500 text-sm mt-1 block"></span>
                    </div>

                    <div class="space-y-2">
                        <label for="Password" class="block text-sm font-medium text-gray-700">
                            <i class="fas fa-lock mr-2 text-green-500"></i>Пароль
                        </label>
                        <input asp-for="Password" type="password" 
                               class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-all duration-200 placeholder-gray-400"
                               placeholder="Придумайте пароль" />
                        <span asp-validation-for="Password" class="text-red-500 text-sm mt-1 block"></span>
                    </div>

                    <div class="space-y-2">
                        <label for="ConfirmPassword" class="block text-sm font-medium text-gray-700">
                            <i class="fas fa-lock mr-2 text-green-500"></i>Подтвердите пароль
                        </label>
                        <input asp-for="ConfirmPassword" type="password" 
                               class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-all duration-200 placeholder-gray-400"
                               placeholder="Повторите пароль" />
                        <span asp-validation-for="ConfirmPassword" class="text-red-500 text-sm mt-1 block"></span>
                    </div>

                    <button type="submit" 
                            class="w-full bg-gradient-to-r from-green-500 to-blue-500 text-white py-4 px-6 rounded-xl font-semibold text-lg hover:from-green-600 hover:to-blue-600 transform hover:scale-105 transition-all duration-200 shadow-lg hover:shadow-xl">
                        <i class="fas fa-user-plus mr-2"></i>Создать аккаунт
                    </button>
                </form>

                <div class="relative my-6">
                    <div class="absolute inset-0 flex items-center">
                        <div class="w-full border-t border-gray-300"></div>
                    </div>
                    <div class="relative flex justify-center text-sm">
                        <span class="px-2 bg-white text-gray-500">Уже есть аккаунт?</span>
                    </div>
                </div>

                <a asp-controller="Account" asp-action="Login" 
                   class="block w-full bg-gradient-to-r from-blue-500 to-purple-500 text-white py-3 px-6 rounded-xl font-semibold text-center hover:from-blue-600 hover:to-purple-600 transform hover:scale-105 transition-all duration-200 shadow-md">
                    <i class="fas fa-sign-in-alt mr-2"></i>Войти в существующий аккаунт
                </a>
            </div>
        </div>

        <div class="text-center mt-8">
            <div class="grid grid-cols-1 gap-4 text-sm text-gray-600">
                <p><i class="fas fa-check-circle mr-2 text-green-500"></i>Быстрая регистрация</p>
                <p><i class="fas fa-shipping-fast mr-2 text-blue-500"></i>Мгновенный доступ к покупкам</p>
                <p><i class="fas fa-shield-alt mr-2 text-purple-500"></i>Защита персональных данных</p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
