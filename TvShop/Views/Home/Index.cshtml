            <div class="flex items-center gap-2">
                <i class="fas fa-truck text-blue-400"></i>
                <span class="text-sm">Бесплатная доставка</span>
            </div>
            <div class="flex items-center gap-2">
                <i class="fas fa-lock text-purple-400"></i>
                <span class="text-sm">Безопасная оплата</span>
            </div>
        </div>
    </div>
</section>

